\begin{center}
\hspace{0.02\textwidth}
\parbox[c][\textheight][t]{0.97\textwidth}{
\begin{center}

\vspace*{-2cm}
\begin{minipage}[c]{0.4\textwidth}
 \begin{flushleft}
 \hspace*{-1.5cm}

 \end{flushleft}
\end{minipage}
\hfill
\begin{minipage}[c]{0.4\textwidth}
 \begin{flushright}
 \hspace*{0.4cm}

 \end{flushright}
\end{minipage}
\vspace*{5.0cm}

{\Huge \bf \@title \par}
\vspace{2.5cm} 

{\large \@type}\\
{\large Faculty of Science, University of Bern}\\
\vspace{1.5cm}
{\large handed in by}\\
\vspace{0.5cm}
{\large \bf \@studentA}\\
\vspace{2cm}
{\large \bf \@date}\\

\vspace{2cm}


{\bf Supervisors} \\[1.5ex]
\@supervision

\end{center}
}
\end{center}
\cleardoublepage
}
